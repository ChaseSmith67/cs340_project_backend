<h1>This is the Movie Relationships page for Movie {{this.movie}}</h1>

{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<label for="actors-table">Actors associated with this movie</label>
<table id="actors-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each actor.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Modify</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the first name and last name --}}
        {{#each actor}}
        <tr>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>
                <button>Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Add an Actor to this Movie</h2>

<p>Select an Actor below and click `Submit` to add them to the cast of this Movie</p>

<form id="movie-add-actor-form" method="POST" action="/movie-add-actor-form">
    <label for="input-actor-name">Actor: </label>
    <select name="input-actor-name" id="input-actor-name">
        {{#each add_actor}}
        <option value="{{this.actor_id}}">{{this.full_name}}</option>
        {{/each}}
    </select>

    <input type="submit" value="Add Actor to Movie">
</form>

