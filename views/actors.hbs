
<h1>This is the Actors page</h1>
<p>All actors currently in the database are listed below.</p>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
{{!-- The Data from our Database --}}

{{!-- Create a table --}}
<table id="actor-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Modify</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody id="people-table">

        {{!-- For each row, print the id, first name, last name, and birthdate, in order --}}
        {{#each data}}

        <tr data-value={{this.actor_id}}>
            <td>{{this.actor_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.birthday}}</td>
            <td>
                <button id="edit-actor">Edit</button>
                <button id="delete-actor" onclick="deleteActor({{this.actor_id}})">Delete</button>
                
            </td>
        </tr>
        {{/each}}

    </tbody>
</table>

<script type="text/javascript" src="/public/js/delete_actor.js"></script>



